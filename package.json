{
  "name": "instagram-video-downloader-api",
  "version": "1.0.0",
  "description": "Modern Instagram Video Downloader API optimized for Vercel deployment",
  "main": "api/index.js",
  "scripts": {
    "dev": "vercel dev",
    "build": "echo 'Build completed'",
    "start": "vercel dev",
    "deploy": "vercel --prod",
    "test": "jest",
    "lint": "eslint . --ext .js"
  },
  "keywords": [
    "instagram",
    "video",
    "downloader",
    "api",
    "social-media",
    "scraper",
    "media-extraction",
    "reels",
    "igtv",
    "stories"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "cheerio": "^1.0.0-rc.12",
    "validator": "^13.11.0"
  },
  "devDependencies": {
    "vercel": "^32.5.0",
    "jest": "^29.7.0",
    "eslint": "^8.55.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!coverage/**",
      "!jest.config.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base"
    ],
    "env": {
      "node": true,
      "es6": true,
      "jest": true
    },
    "rules": {
      "no-console": "warn",
      "consistent-return": "off",
      "no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/instagram-video-downloader-api.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/instagram-video-downloader-api/issues"
  },
  "homepage": "https://github.com/yourusername/instagram-video-downloader-api#readme"
}
